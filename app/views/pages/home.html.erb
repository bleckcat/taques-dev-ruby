<h1>Main Technologies</h1>
<section class="content-wrapper">
  <div class="scene">
    <div class="carousel">
      <% @technologies.each do |tech| %>
        <div class="carousel__cell <%= tech[:id] %>">
          <div class="banner">
            <%= image_tag "#{tech[:id]}.svg", alt: "#{tech[:name]}", width: 54 %>
          </div>
          <div class="cell-content">
            <h2><%= tech[:title] %></h2>
            <p><%= tech[:description] %></p>
            <div class="cell-actions">
              <button class="open-modal-button" data-modal-id="modal-<%= tech[:id] %>">Learn More</button>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <% @technologies.each do |tech| %>
    <%= render partial: "modal", locals: { technology: tech } %>
  <% end %>
</section>
<div style="height: 1000px;">Scroll me!</div>